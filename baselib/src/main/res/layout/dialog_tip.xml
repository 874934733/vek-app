<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="24dp">

        <ImageView
            android:id="@+id/iv_tip_dialog_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/tv_tip_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_tip_dialog_img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:textColor="#cc000000"
            android:textSize="18sp"
            tools:text="复诊挂号说明" />

        <TextView
            android:id="@+id/tv_tip_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tip_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textColor="@color/txtBlackD8"
            android:textSize="16sp"
            tools:text="您选择的就诊人未通过线上大医课堂或线下医院，在xxx专家工作室预约并成功就诊xxx医生，视为初诊预约。本次预约就诊后，下次您使用同一就诊人预约该医生，自动享受复诊优惠。" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_tip_dialog_content"
            android:layout_marginTop="20dp"
            android:background="#FFF1F0F5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#cc000000"
                android:textSize="18sp"
                tools:text="我知道了" />

            <View
                android:id="@+id/v_btm_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFF1F0F5" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_1890FF"
                android:textSize="18sp"
                tools:text="我知道了" />

        </LinearLayout>

    </RelativeLayout>
</layout>